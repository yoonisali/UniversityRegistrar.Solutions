@{
  Layout = "_Layout";
}
@await Html.PartialAsync("Footer")

@using UniversityRegistrar.Models

<h2>Courses</h2>

@if (@Model.Count == 0)
{
  <h4>No courses have been added yet!</h4>
} 

<ul>
  @foreach (Course courses in Model)
  {
    <li>@Html.ActionLink($"{courses.Name}", "Details", new {id = courses.CourseId})</li>
  }
</ul>


<p>@Html.ActionLink("Add a new course!", "Create")</p>
<p>@Html.ActionLink("Add a new student!", "Create", "Students")</p>

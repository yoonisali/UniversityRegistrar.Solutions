@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;
@using UniversityRegistrar.Models;


<h3>Course Details:</h3>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>


@if(@Model.JoinEntities.Count == 0)
{
  <p>This course has no JoinEntities enrolled.</p>
}
else 
{
  @foreach (Enrollment student in Model.JoinEntities)
  {
  <h5>Students enrolled in this course:</h5>
  <ul>
    <li>@student.Student.Name</li>
  </ul>
  }
}





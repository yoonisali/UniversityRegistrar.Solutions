@{
  Layout = "_Layout";
}
@await Html.PartialAsync("Footer")

@using UniversityRegistrar.Models

<h2>Majors</h2>

@if (@Model.Count == 0)
{
  <h4>No majors have been added yet!</h4>
} 

<ul>
  @foreach (Major major in Model)
  {
    <li>@Html.ActionLink($"{major.Name}", "Details", new { id = major.MajorId })</li>
  }
</ul>


<p>@Html.ActionLink("Add a new major!", "Create")</p>


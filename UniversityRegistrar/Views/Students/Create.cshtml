@{
  Layout = "_Layout";
}
@await Html.PartialAsync("Footer")

@model UniversityRegistrar.Models.Student

<h4>Add a new student</h4>
<hr >

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;"})<br><br>
  <label for="EnrollmentDate">Enrollment Date</label><br>
  <input type="datetime-local" name="EnrollmentDate" id="EnrollmentDate">
  <br><br>
  <input type="submit" value="Add a new student!" class="btn btn-success" />
}
